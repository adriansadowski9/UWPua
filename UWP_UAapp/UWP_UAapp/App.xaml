<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UWP_UAapp.App">
	<Application.Resources>
		<ResourceDictionary>
            <Color x:Key="Primary">#239B56</Color>
            <Color x:Key="PrimaryDark">#1976D2</Color>
            <Color x:Key="Accent">#82E0AA</Color>
            <Color x:Key="LightBackgroundColor">#FAFAFA</Color>
            <Color x:Key="DarkBackgroundColor">#C0C0C0</Color>
            <Color x:Key="MediumGrayTextColor">#4d4d4d</Color>
            <Color x:Key="LightTextColor">#999999</Color>
            <Color x:Key="backgroundColor">#f5f5f5</Color>
            <Color x:Key="textColor">#262626</Color>
            <Color x:Key="textColorAbout">#D5F5E3</Color>
            <!--Global Styles-->
            <Color x:Key="NavigationPrimary">#239B56</Color>
            <Color x:Key="barBackgroundColor">#239B56</Color>
            <Style TargetType="NavigationPage">
                <Setter Property="BarBackgroundColor" Value="{DynamicResource barBackgroundColor}"/>
            </Style>
        </ResourceDictionary>
	</Application.Resources>
</Application>